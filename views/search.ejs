<!doctype html>
<html lang="en">
  <head>
    <%- include('partials/head'); %>
  </head>
  <body>
    <%- include('partials/header'); %>

    <main>
      <section class="container">
        <form class="search-form" action="/search">
          <div class="row">
            <div class="form-group col-12 col-sm-3  ">
              <label class="form-label">ID</label>
              <input class="form-control" name="id" type="text" value="<%= formValues.id %>" />
            </div>

     
            <%-
              include('partials/brand-select', {
                classes: 'col-12 col-sm-4',
                value: formValues.brand,
                error: null,
              })
            %>


            <div class="form-group col-12 col-sm-4">
              <label class="form-label">Available</label>
              <select class="form-control" name="available">
                <option value="">Select...</option>
                <option
                  value="true"
                  <%= formValues.available === true ? 'selected' : '' %>
                >
                  True
                </option>
                <option
                  value="false"
                  <%= formValues.available === false ? 'selected' : '' %>
                >
                  False
                </option>
              </select>
            </div>

            <div class="col-12 col-sm-1">
              <button class="btn btn-info" type="submit">Search</button>
            </div>
          </div>
        </form>
      </section>

      <section class="container">
        <table  class="table table-striped table-dark table-borderless table-hover">
          <thead>
            <tr>
              <th>ID</th>
			  <th>Brand</th>
			  <th>Description</th>
			  <th>Price</th>
			  <th>Quantity </th>
              <th>Warehouse pick up is available</th>
            </tr>
          </thead>

          <tbody>
            <% items.forEach((computer) => { %>
              <tr>
                <td><%= computer.id %></td>
				 <td><%= computer.brand %></td>
				 <td><%= computer.description %></td>
				 <td><%= computer.price %></td>
				  <td><%= computer.quantity  %></td>
                <td>
                  <img
                    width="40"
                    height="40"
                    src="/static/protected/<%= computer.available ? 'true.png' : 'false.png' %>"
                    alt="<%= computer.available ? 'Is available' : 'Is not available' %>"
                  />
                </td>
              </tr>
            <% }); %>
          </tbody>

          <tfoot>
            <tr>
              <td colspan="11" style="text-align:right;">Total: <%= items.length %></td>
            </tr>
          </tfoot>
        </table>
      </section>
    </main>

    <%- include('partials/footer'); %>
  </body>
</html>
